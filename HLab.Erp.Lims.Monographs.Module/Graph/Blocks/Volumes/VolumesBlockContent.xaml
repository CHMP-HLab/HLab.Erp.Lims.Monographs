<UserControl x:Class="HLab.Erp.Lims.Monographs.Module.Graph.Blocks.Volumes.VolumesBlockContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:volumes="clr-namespace:HLab.Erp.Lims.Monographs.Module.Graph.Blocks.Volumes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=volumes:VolumesBlock, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Opacity="0.8" Width ="30" Height="40" BorderThickness="3,0,3,3" CornerRadius="0,0,5,5" BorderBrush="ForestGreen">
            <TextBlock 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Foreground="LightGreen" 
                FontSize="20"
                FontWeight="ExtraBold"
                Text="{Binding NbVolumes,FallbackValue=8}"/>
        </Border>
    </Grid>
</UserControl>
